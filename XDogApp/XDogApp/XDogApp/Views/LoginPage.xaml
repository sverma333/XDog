<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XDogApp.Views.LoginPage">
    <StackLayout>
        <Label x:Name="Label_Email" Text="Email" />
        <Entry x:Name="Entry_Email" Placeholder="Email" />

        <Label x:Name="Label_Password" Text="Password" />
        <Entry x:Name="Entry_Password" Placeholder="Password" />

        <Button x:Name="btnSendverification" Text="Send Verification Code" Clicked="btnSendverification_Clicked" />

        <Label x:Name="Label_VerificationCode" Text="Verification Code" />
        <Entry x:Name="Entry_VerificationCode" Placeholder="VerificationCode" />

        <Button x:Name="btnLogin" Text="Log in" Clicked="btnLogin_Clicked" />


    </StackLayout>
</ContentPage>